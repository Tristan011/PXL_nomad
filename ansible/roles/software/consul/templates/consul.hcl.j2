# {{ ansible_managed }}
# {{ ansible_default_ipv4.address }}
# {{ ansible_eth1.ipv4.address }}

datacenter = "dc1"
data_dir = "/opt/consul"
client_addr = "0.0.0.0"
ui = true

#{{ consul_bindaddr }}
bind_addr = "{{ ansible_eth1.ipv4.address }}"

{% if consul_server == "yes" %}
bootstrap_expect = {{ groups['servers'] | length }}
server = true
{% else %}
server = false
{% endif %}

{% if consul_client == "yes" %}
retry_join = [ "192.168.1.4" ]
{% endif %}

